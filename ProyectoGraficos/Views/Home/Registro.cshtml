
@{
    ViewBag.Title = "Registro";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/Resources/css/estilos.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body class="bg-light">
    <div class="wrapper">
        <div class="formcontent">
            <form method="post" action="@Url.Action("Registrarse", "Home")">
                <div class="form-control">
                    <div class="row">
                        <h2 class="h2">Registro</h2>
                    </div>
                    <div>
                        <label for="tbUsuario">Usuario:</label>
                        <input type="text" id="tbUsuario" class="form-control" name="usuario" placeholder="Nombre de Usuario" />
                    </div>
                    <div>
                        <label for="tbPassword">Password:</label>
                        <input type="password" id="tbPassword" class="form-control" name="pass" placeholder="Password" />
                    </div>
                    <hr />
                    <div class="row">
                        <label class="alert-danger" id="lblError"></label>
                    </div>
                    <div>
                        @if (TempData["Error"] != null)
                        {
                            <label style="color: red;">@ViewBag.Error</label>
                        }
                    </div>
                    <div class="row">
                        <button id="BtnRegistro" class="btn btn-primary btn-default" type="submit">Registrarse</button>
                    </div>
                    <div class="row text-center">
                        <a id="lnkRegistrarse" href="@Url.Action("Login", "Home")">Volver</a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</body>

</html>

